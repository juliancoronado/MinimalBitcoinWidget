<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MinimalBitcoinWidget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.MinimalBitcoinWidget.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_widget</item>
        <item name="appWidgetTextColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
    </style>

</resources>